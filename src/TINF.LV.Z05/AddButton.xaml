<UserControl x:Class="TINF.LV.Z05.AddButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Layout oko + ikonice -->
  <Grid Background="Transparent" Cursor="Hand" MinHeight="26" MouseEnter="MEnter" MouseLeave="MLeave" MouseLeftButtonDown="MDown" MouseLeftButtonUp="MUp">
    <Grid.RowDefinitions>
      <RowDefinition Height="7" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="7" />
    </Grid.RowDefinitions>

    <!-- + ikonica -->
    <Canvas Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="12" Height="12" Background="Transparent" ClipToBounds="true">
      <Path StrokeThickness="2" x:Name="Path" Data="M 0,6 L 12,6 M 6,0 L 6,12" />
    </Canvas>
  </Grid>
</UserControl>
